{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "[local] C/C++: g++ build active file",
      "command": "/usr/bin/g++",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/out/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "/usr/bin"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Generated task by Debugger"
    },

    {
      "type": "shell",
      "label": "[local] C/C++: run built file from stdin",
      "command": "${fileDirname}/script/run_stdin_preset.sh",
      "args": [
      ],
      "options": {
        "cwd": "/usr/bin"
      },
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "detail": "exec script/run_stdin_preset.sh"
    }
  ],
  "version": "2.0.0"
}